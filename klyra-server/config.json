{
  "server": {
    "port": 3001,
    "host": "0.0.0.0",
    "cors": {
      "origin": "*",
      "methods": ["GET", "POST"]
    }
  },
  "database": {
    "type": "memory",
    "persist": false
  },
  "rooms": {
    "defaultRoom": "general",
    "maxUsersPerRoom": 100,
    "maxMessagesPerRoom": 1000
  },
  "security": {
    "maxFileSize": 10485760,
    "allowedFileTypes": ["*"],
    "rateLimit": {
      "messages": 30,
      "windowMs": 60000
    }
  },
  "logging": {
    "level": "info",
    "logConnections": true,
    "logMessages": false
  }
}
