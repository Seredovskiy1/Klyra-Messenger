{
  "server": {
    "host": "localhost",
    "port": 3001,
    "protocol": "http",
    "autoReconnect": true,
    "reconnectAttempts": 5,
    "reconnectInterval": 1000
  },
  "ui": {
    "theme": "auto",
    "soundEnabled": true,
    "soundVolume": 0.2,
    "showTimestamps": true,
    "showAvatars": true
  },
