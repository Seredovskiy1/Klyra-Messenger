    "fileSharing": true,
    "messageEditing": true,
    "messageDeletion": true,
    "typingIndicators": true,
    "messageSearch": true
  },
  "limits": {
    "maxFileSize": 10485760,
    "maxMessageLength": 1000,
    "maxMessagesInHistory": 100
  }
}
